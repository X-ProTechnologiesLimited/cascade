//- page-contacts.jade

doctype
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,800" rel="stylesheet")
		title Contacts - Walton Consulting Template
		<!-- build:css css/vendor.css -->
		<!-- bower:css -->
		<!-- endbower -->
		<!-- endbuild -->
		link(rel="stylesheet" href="css/style-1.css" id="template-skin")

	body

		<!-- Preload start -->
		include includes/preload.jade
		<!-- Preload end -->

		
		
		

		<!-- To the top start -->
		include includes/to-the-top.jade
		<!-- To the top end -->

		<!-- Mobile menu start -->
		include includes/mobile-menu.jade
		<!-- Mobile menu end -->

		#page.page
			#content-wrapper.content-wrapper

				.content-wrapper-inner

					<!-- Header start -->
					include includes/header-1.jade
					<!-- Header end -->

					<!-- Page titlebar start -->
					.content-section.decorated-bg.page-titlebar
						.container
							.row
								.col-lg-12
									h1.title contact us
									ol.breadcrumb
										li: a(href="#") Home
										li: a(href="#") Site Templates
										li: a(href="#") Business
										li: a(href="#") Corporate
										li.active Walton Consulting
					<!-- Page titlebar end -->

					<!-- Map start -->
					#map-canvas.map-canvas.content-section
					<!-- Map end -->

					<!-- Contacts start -->
					.content-section.contacts-page-section
						.container
							.row
								.col-lg-12
									.contacts-page-content
										.content-block.palette-2-bg.left
											h3 our contacts
											.widget.widget-contacts
												.widget-content
													p.title.text-heading Walton Consulting Inc.
													p.address 1064 Maxwell Street<br>Windsor, CT 06095
													p.phone 1 (860) 729-1526
													p.email: a(href="#") support@walton.com
													p.links
														a(href="#"): i.fa.fa-facebook
														a(href="#"): i.fa.fa-twitter
														a(href="#"): i.fa.fa-linkedin
														a(href="#"): i.fa.fa-google-plus
														a(href="#"): i.fa.fa-vimeo
										.content-block.palette-4-bg.right
											h3 send us a message
											p Feel free to drop us a line below.
											.row: form#contact-form
												.form-group.contacts-form-result: .col-xs-12: strong
												.form-group.clearfix
													.col-xs-12.col-sm-6
														input.form-control(type="text" placeholder="Your name *" name="comment-name")
													.col-xs-12.col-sm-6
														input.form-control(type="email" placeholder="Your e-mail address *" name="comment-email")
												.form-group.clearfix
													.col-xs-12.col-sm-6
														input.form-control(type="tel" placeholder="Phone number..." name="comment-phone")
													.col-xs-12.col-sm-6
														input.form-control(type="text" placeholder="Company name..." name="comment-company")
												.form-group.clearfix
													.col-xs-12
														textarea.form-control(placeholder="Your message *" rows="7" name="comment-message")
												.form-group.clearfix
													.col-xs-12
														button.btn.btn-2(type="submit") Send your request
					<!-- Contacts end -->

				<!-- Footer start -->
				include includes/footer-1.jade
				<!-- Footer end -->

		<!-- build:js js/vendor.js -->
		<!-- bower:js -->
		<!-- endbower -->
		<!-- endbuild -->
		include includes/scripts.jade
